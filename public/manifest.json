{
  "manifest_version": 3,
  "name": "YouTube Overlay Extension",
  "version": "1.0.0",
  "description": "Shows 'Hello world!' overlay on YouTube videos when pressing CTRL + F3",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
} 